# EMAIL SERVICE (OPTIONAL - works in dry-run mode without this)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@lacqueandlatte.ca"
FEATURE_EMAIL_ENABLED="false"

# SMS SERVICE (OPTIONAL - works in dry-run mode without this)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
